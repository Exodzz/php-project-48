{
    "name": "hexlet/code",
    "require": {
        "docopt/docopt": "^1.0",
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^10.5",
        "symfony/yaml": "^6.0"
    },
    "autoload": {
        "files": [
            "./src/Gendiff.php",
            "./src/CompareArrays.php",
            "./src/Parsers.php",
            "./src/Formatters/stylish/stylish.php",
            "./src/Formatters/plain/plain.php",
            "./src/Formatters/index.php"
        ]
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Gorshkov",
            "email": "gorshkov.s@extyl-pro.ru"
        }
    ],
    "scripts": {
        "test-coverage": [
            "XDEBUG_MODE=coverage phpunit tests -c phpunit.xml --coverage-clover coverage.xml"
        ],
        "test-coverage-html": [
            "phpunit tests -c phpunit.xml --coverage-html cov.html"
        ]
    }
}
